<owo-ui>

    <components>
        <flow-layout direction="horizontal">
            <children>
                <label>
                    <text>Topic 3 - Sizing</text>
                    <shadow>true</shadow>

                    <positioning type="relative">50,5</positioning>
                </label>

                <scroll direction="vertical">
                    <label>
                        <text translate="true">text.owo-ui-academy.tutorial.sizing</text>
                        <max-width>250</max-width>

                        <margins>
                            <right>4</right>
                        </margins>
                    </label>

                    <sizing>
                        <vertical method="fixed">180</vertical>
                    </sizing>

                    <margins>
                        <all>15</all>
                    </margins>
                </scroll>

                <flow-layout direction="vertical">
                    <children>
                        <flow-layout direction="vertical" id="box-container">
                            <children>
                                <box id="the-box">
                                    <start-color>#FF00D7FF</start-color>
                                    <end-color>#FF5800FF</end-color>
                                    <fill>true</fill>
                                    <direction>top-to-bottom</direction>

                                    <sizing>
                                        <vertical method="fixed">50</vertical>
                                        <horizontal method="fixed">50</horizontal>
                                    </sizing>
                                </box>
                            </children>

                            <vertical-alignment>center</vertical-alignment>
                            <horizontal-alignment>center</horizontal-alignment>

                            <surface>
                                <flat>#77000000</flat>
                            </surface>
                        </flow-layout>
                    </children>

                    <surface>
                        <flat>#77000000</flat>
                        <outline>#FF121212</outline>
                    </surface>

                    <padding>
                        <all>1</all>
                    </padding>

                    <sizing>
                        <vertical method="fixed">150</vertical>
                        <horizontal method="fixed">150</horizontal>
                    </sizing>
                </flow-layout>

                <flow-layout direction="vertical">
                    <children>
                        <template name="sizing-button">
                            <method>content</method>
                            <method-name>Content</method-name>
                            <x-default>0</x-default>
                            <y-default>0</y-default>
                        </template>

                       <template name="sizing-button">
                           <method>fixed</method>
                           <method-name>Fixed</method-name>
                           <x-default>60</x-default>
                           <y-default>60</y-default>
                       </template>

                        <template name="sizing-button">
                            <method>fill</method>
                            <method-name>Fill</method-name>
                            <x-default>50</x-default>
                            <y-default>50</y-default>
                        </template>
                    </children>

                    <margins>
                        <left>10</left>
                    </margins>
                </flow-layout>

                <flow-layout direction="horizontal">
                    <children>
                        <button id="inspector-button">
                            <text>⚡ Inspector</text>
                        </button>

                        <box>
                            <color>#FF696969</color>
                            <sizing>
                                <vertical method="fixed">16</vertical>
                                <horizontal method="fixed">1</horizontal>
                            </sizing>
                            <margins>
                                <horizontal>5</horizontal>
                            </margins>
                        </box>

                        <button id="previous-button">
                            <text>⏴ Previous</text>
                            <margins><right>2</right></margins>
                        </button>
                        <button id="next-button">
                            <text>Next ⏵</text>
                        </button>
                    </children>

                    <positioning type="relative">50,100</positioning>#

                    <vertical-alignment>center</vertical-alignment>

                    <surface>
                        <panel dark="true"/>
                    </surface>

                    <padding>
                        <all>6</all>
                    </padding>

                    <margins>
                        <bottom>15</bottom>
                    </margins>
                </flow-layout>
            </children>

            <vertical-alignment>center</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>

            <surface>
                <flat>#C0101010</flat>
            </surface>

        </flow-layout>
    </components>

    <templates>
        <sizing-button>
            <flow-layout direction="horizontal">
                <children>
                    <button id="{{method}}-button">
                        <text>{{method-name}}</text>
                        <sizing>
                            <horizontal method="fixed">52</horizontal>
                        </sizing>
                    </button>

                    <text-box id="{{method}}-x-text-box">
                        <sizing>
                            <horizontal method="fixed">30</horizontal>
                        </sizing>
                        <text>{{x-default}}</text>

                        <margins>
                            <left>5</left>
                        </margins>
                    </text-box>

                    <text-box id="{{method}}-y-text-box">
                        <sizing>
                            <horizontal method="fixed">30</horizontal>
                        </sizing>
                        <text>{{y-default}}</text>

                        <margins>
                            <left>5</left>
                        </margins>
                    </text-box>
                </children>

                <margins>
                    <vertical>2</vertical>
                </margins>

                <vertical-alignment>center</vertical-alignment>
            </flow-layout>
        </sizing-button>
    </templates>

</owo-ui>