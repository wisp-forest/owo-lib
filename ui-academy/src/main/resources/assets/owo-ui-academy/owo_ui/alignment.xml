<owo-ui>

    <components>
        <flow-layout direction="horizontal">
            <children>
                <label>
                    <text>Topic 2.2 - Alignment</text>
                    <shadow>true</shadow>

                    <positioning type="relative">50,5</positioning>
                </label>

                <label>
                    <text translate="true">text.owo-ui-academy.tutorial.alignment</text>
                    <max-width>200</max-width>

                    <margins>
                        <all>15</all>
                    </margins>
                </label>

                <flow-layout direction="vertical" id="box-container">
                    <children>
                        <box id="the-box">
                            <start-color>#FF00D7FF</start-color>
                            <end-color>#FF5800FF</end-color>
                            <fill>true</fill>
                            <direction>top-to-bottom</direction>

                            <sizing>
                                <vertical method="fixed">50</vertical>
                                <horizontal method="fixed">50</horizontal>
                            </sizing>
                        </box>

                        <flow-layout direction="vertical">
                            <children>
                                <label>
                                    <text>This label follows&#10;the layout</text>
                                    <shadow>true</shadow>
                                    <horizontal-text-alignment>center</horizontal-text-alignment>
                                </label>
                            </children>

                            <padding>
                                <all>3</all>
                            </padding>

                            <surface>
                                <flat>#77000000</flat>
                            </surface>
                        </flow-layout>
                    </children>

                    <surface>
                        <flat>#77000000</flat>
                        <outline>#FF121212</outline>
                    </surface>

                    <padding>
                        <all>1</all>
                    </padding>

                    <sizing>
                        <vertical method="fixed">150</vertical>
                        <horizontal method="fixed">150</horizontal>
                    </sizing>
                </flow-layout>

                <flow-layout direction="vertical">
                    <children>
                        <label>
                            <text>Vertical</text>
                            <margins>
                                <vertical>2</vertical>
                            </margins>
                        </label>
                        <template name="alignment-buttons">
                            <type>vertical</type>
                            <min>top</min>
                            <min-name>Top</min-name>
                            <max>bottom</max>
                            <max-name>Bottom</max-name>
                        </template>

                        <label>
                            <text>Horizontal</text>
                            <margins>
                                <top>5</top>
                                <bottom>2</bottom>
                            </margins>
                        </label>
                        <template name="alignment-buttons">
                            <type>horizontal</type>
                            <min>left</min>
                            <min-name>Left</min-name>
                            <max>right</max>
                            <max-name>Right</max-name>
                        </template>
                    </children>

                    <margins>
                        <left>10</left>
                    </margins>
                </flow-layout>

                <flow-layout direction="horizontal">
                    <children>
                        <button id="inspector-button">
                            <text>⚡ Inspector</text>
                        </button>

                        <box>
                            <color>#FF696969</color>
                            <sizing>
                                <vertical method="fixed">16</vertical>
                                <horizontal method="fixed">1</horizontal>
                            </sizing>
                            <margins>
                                <horizontal>5</horizontal>
                            </margins>
                        </box>

                        <button id="previous-button">
                            <text>⏴ Previous</text>
                            <margins>
                                <right>2</right>
                            </margins>
                        </button>
                        <button id="next-button">
                            <text>Next ⏵</text>
                        </button>
                    </children>

                    <positioning type="relative">50,100</positioning>#

                    <vertical-alignment>center</vertical-alignment>

                    <surface>
                        <panel dark="true"/>
                    </surface>

                    <padding>
                        <all>6</all>
                    </padding>

                    <margins>
                        <bottom>15</bottom>
                    </margins>
                </flow-layout>
            </children>

            <vertical-alignment>center</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>

            <surface>
                <flat>#C0101010</flat>
            </surface>

        </flow-layout>
    </components>

    <templates>
        <alignment-buttons>
            <flow-layout direction="horizontal">
                <children>
                    <button id="{{min}}-button">
                        <text>{{min-name}}</text>
                        <sizing>
                            <horizontal method="fixed">45</horizontal>
                        </sizing>
                    </button>
                    <button id="{{type}}-center-button">
                        <text>Center</text>
                        <sizing>
                            <horizontal method="fixed">45</horizontal>
                        </sizing>
                    </button>
                    <button id="{{max}}-button">
                        <text>{{max-name}}</text>
                        <sizing>
                            <horizontal method="fixed">45</horizontal>
                        </sizing>
                    </button>
                </children>

                <margins>
                    <vertical>2</vertical>
                </margins>

                <vertical-alignment>center</vertical-alignment>
            </flow-layout>
        </alignment-buttons>
    </templates>

</owo-ui>